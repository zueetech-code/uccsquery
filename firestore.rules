rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // Helper Functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isAgent() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "agent";
    }

    function agentClientId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId;
    }

    // ---------------------------
    // USERS COLLECTION
    // ---------------------------
    match /users/{uid} {
      allow read: if request.auth.uid == uid || isAdmin();
      allow write: if isAdmin();
    }

    // ---------------------------
    // CLIENTS COLLECTION
    // ---------------------------
    match /clients/{clientId} {
      allow read, write: if isAdmin();
    }

    // ---------------------------
    // DB_CONFIGS COLLECTION
    // ---------------------------
    match /db_configs/{clientId} {
      allow read: if isAdmin() || (isAgent() && clientId == agentClientId());
      allow write: if isAdmin();
    }

    // ---------------------------
    // QUERIES COLLECTION
    // ---------------------------
    match /queries/{queryId} {
      allow read: if isAdmin() || isAgent();
      allow write: if isAdmin();
    }

    // ---------------------------
    // COMMANDS COLLECTION
    // ---------------------------
    match /commands/{commandId} {
      allow read, write: if isAdmin();

      allow read, update: if isAgent()
        && resource.data.clientId == agentClientId();

      allow create: if isAgent()
        && request.resource.data.clientId == agentClientId();
    }

    // ---------------------------
    // LOGS COLLECTION
    // ---------------------------
    match /logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
